// TODO: Extract a base tscofig from which to import common settings 
{
   "compilerOptions": {
      "target": "ES2020",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "sourceMap": true,
      "allowJs": true,
      "outDir": "build",
      "esModuleInterop": true,
      "types": [
         "node",
         "jest",
         "reflect-metadata"
      ],
      "removeComments": true,
      "skipLibCheck": true,
      "declaration": true,
      "noImplicitReturns": false,
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      "noFallthroughCasesInSwitch": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      /* Experimental Options */
      "experimentalDecorators": true /* Enables experimental support for ES7 decorators. */,
      "emitDecoratorMetadata": true /* Enables experimental support for emitting type metadata for decorators. */,
      /* Strict Type-Checking Options */
      "strict": false,
      "noImplicitAny": false /* Raise error on expressions and declarations with an implied 'any' type. */,
      "strictNullChecks": false /* Enable strict null checks. */,
      "strictFunctionTypes": true /* Enable strict checking of function types. */,
      "strictPropertyInitialization": true /* Enable strict checking of property initialization in classes. this one is for preventing the typescript errors while using @Inject()*/,
      "noImplicitThis": true /* Raise error on 'this' expressions with an implied 'any' type. */,
      "alwaysStrict": false /* Parse in strict mode and emit "use strict" for each source file. */,
      /* Debugging Options */
      "traceResolution": false /* Report module resolution log messages. */,
      "listEmittedFiles": false /* Print names of generated files part of the compilation. */,
      "listFiles": false /* Print names of files part of the compilation. */,
      "pretty": true /* Stylize errors and messages using color and context. */
   },
   "include": [
      "src/**/*"
   ],
   "exclude": [
      "node_modules",
      "dist",
      "coverage",
      "src/**/*.spec.ts"
   ],
   "ts-node": {
      "esm": true,
      "experimentalSpecifierResolution": "node"
   }
}
